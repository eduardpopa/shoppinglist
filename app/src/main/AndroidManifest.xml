<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingList">
        <activity
            android:name=".activities.ListItemsActivity"
            android:exported="true"
            android:label="@string/list_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AddItemActivity"
            android:label="@string/add_item_title"
            android:parentActivityName=".activities.ListItemsActivity" />
        <activity
            android:name=".activities.EditItemActivity"
            android:label="@string/edit_item_title"
            android:parentActivityName=".activities.ListItemsActivity" />
        <activity
            android:name=".activities.HelpActivity"
            android:label="@string/help_title"
            android:parentActivityName=".activities.ListItemsActivity"
            />
    </application>

</manifest>